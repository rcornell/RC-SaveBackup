<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MouseEnter">#5AFFFFFF</Color>
    <SolidColorBrush x:Key="ListBackground">#99575757</SolidColorBrush>
    <Color x:Key="Button.GradientTop">#32FFFFFF</Color>
    <Color x:Key="Button.GradientBottom">#3CFFFFFF</Color>
    <SolidColorBrush x:Key="TextBrush">White</SolidColorBrush>
    <Color x:Key="Button.BorderTop">#CC363636</Color>
    <Color x:Key="Button.BorderBottom">#CC252525</Color>

    <ImageSource x:Key="Background.Source">pack://application:,,,/Assets/bluewhite.jpg</ImageSource>

    <LinearGradientBrush x:Key="Button.BorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource Button.BorderTop}" />
        <GradientStop Offset="1" Color="{DynamicResource Button.BorderBottom}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Button.BackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="{DynamicResource Button.GradientTop}" />
        <GradientStop Offset="1" Color="{DynamicResource Button.GradientBottom}" />
    </LinearGradientBrush>
</ResourceDictionary>