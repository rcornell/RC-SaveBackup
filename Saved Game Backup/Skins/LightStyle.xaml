<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:savedGameBackup="clr-namespace:Saved_Game_Backup">
    
    <Color x:Key="MouseEnter">#5AFFFFFF</Color>
    <SolidColorBrush x:Key="ListBackground">#99575757</SolidColorBrush>
    <Color x:Key="Button.GradientTop">#CBFFFFFF</Color>
    <Color x:Key="Button.GradientBottom">#E8E8E8</Color>
    <Color x:Key="Button.GradientBottomMouseEnter">#3CADADAD</Color>
    <SolidColorBrush x:Key="TextBrush">Black</SolidColorBrush>
    <Color x:Key="Button.BorderTop">#CC363636</Color>
    <Color x:Key="Button.BorderBottom">#CC252525</Color>

    <ImageSource x:Key="BackgroundSource">/Assets/rap.jpg</ImageSource>

    <LinearGradientBrush x:Key="Button.BorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0" Color="{StaticResource Button.BorderTop}" />
        <GradientStop Offset="1" Color="{StaticResource Button.BorderBottom}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Button.BackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="{StaticResource Button.GradientTop}" />
        <GradientStop Offset="1" Color="{StaticResource Button.GradientBottom}" />
    </LinearGradientBrush>
    
    <ImageBrush x:Key="BackgroundBrush" ImageSource="{StaticResource BackgroundSource}" />

    <!--  FONT STYLES GO HERE  -->
    <Style x:Key="FontStyle" TargetType="Control">
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>
    <Style x:Key="TextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="TextOptions.TextHintingMode" Value="Animated" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
    </Style>

    <!--  BUTTON STYLE GOES HERE  -->
    <Style x:Key="SbtButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource Button.BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Button.BorderBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="FontFamily" Value="Segoe UI Light" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            RenderTransformOrigin="0.5, 1">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <RotateTransform />
                                <ScaleTransform />
                            </TransformGroup>
                        </Border.RenderTransform>
                        <ContentPresenter Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>

                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>

                                    <!--<ColorAnimation Duration="0:0:0.25"
                                                    Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                                    To="Black" />-->

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>


                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.25"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="{Binding Path=Main.Theme.GradientBottomColor.Color, Source={StaticResource Locator}}" />
                                    -->
                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                                     To="1" />
                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                                     To="1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>


                        <EventTrigger RoutedEvent="Button.GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.25"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#5AFFFFFF" />
                                    -->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.LostFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.25"
                                        Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#3CFFFFFF" />
                                        <ColorAnimation Duration="0:0:0.25"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#3CFFFFFF" />
                                    -->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Button.MouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#46FFFFFF" />
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#5AFFFFFF" />
                                    -->
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#46FFFFFF" />
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#5AFFFFFF" />
                                    -->
                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                                     To="0.97" />
                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                                     To="0.95" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <!--
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[0].Color"
                                        To="#3CFFFFFF" />
                                        <ColorAnimation Duration="0:0:0.0"
                                        Storyboard.TargetProperty="Background.GradientStops[1].Color"
                                        To="#3CFFFFFF" />
                                    -->

                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                                                     To="1" />
                                    <DoubleAnimation Duration="0:0:0"
                                                     Storyboard.TargetName="ButtonBorder"
                                                     Storyboard.TargetProperty="(Border.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                                                     To="1" />
                                </Storyboard>
                            </BeginStoryboard>

                        </EventTrigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  WrapPanelGame Style Goes Here  -->
    <Style TargetType="savedGameBackup:WrapPanelGame">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <ScaleTransform CenterX="1"
                                    CenterY="1"
                                    ScaleX="1"
                                    ScaleY="1" />
                    <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5" />
                </TransformGroup>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="savedGameBackup:WrapPanelGame">
                    <Border Width="{TemplateBinding BorderWidth}" Height="{TemplateBinding BorderHeight}">
                        <StackPanel>
                            <Image x:Name="ImageControl"
                                   Width="{TemplateBinding ThumbnailWidth}"
                                   Height="{TemplateBinding ThumbnailHeight}"
                                   Source="{TemplateBinding ThumbnailSource}"
                                   Stretch="{TemplateBinding Stretch}"
                                   StretchDirection="{TemplateBinding StretchDirection}">
                                <Image.Effect>
                                    <DropShadowEffect x:Name="DropShadowEffect"
                                                      BlurRadius="10"
                                                      Opacity="0.75"
                                                      RenderingBias="Performance"
                                                      ShadowDepth="10"
                                                      Color="Black" />
                                </Image.Effect>
                            </Image>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{TemplateBinding Title}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation AutoReverse="True"
                                                         Duration="0:0:1"
                                                         From="-5"
                                                         RepeatBehavior="Forever"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                                         To="5">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseInOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                                         To="0">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsVisible" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.5"
                                                         From="0"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                         To="1">

                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.5"
                                                         From="0"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                         To="1">
                                            <DoubleAnimation.EasingFunction>
                                                <ExponentialEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="10"
                                                         Storyboard.TargetName="DropShadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="15">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="1"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                         To="1.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="1"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                         To="1.1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="15"
                                                         Storyboard.TargetName="DropShadowEffect"
                                                         Storyboard.TargetProperty="ShadowDepth"
                                                         To="10">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase EasingMode="EaseOut" Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="1.1"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                         To="1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Duration="0:0:0.2"
                                                         From="1.1"
                                                         Storyboard.TargetProperty="(savedGameBackup:WrapPanelGame.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                         To="1">
                                            <DoubleAnimation.EasingFunction>
                                                <PowerEase Power="2" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Autobackup Box Style goes here  -->
    <LinearGradientBrush x:Key="AutoBackupBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0" Color="#4C0FF50F" />
        <GradientStop Offset="1" Color="#3C11F01B" />
    </LinearGradientBrush>

    <Style x:Key="AutobackupStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource AutoBackupBrush}" />
        <Setter Property="Margin" Value="3" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Viewbox x:Key="CheckMark" RenderTransformOrigin="0.5,0.5">
        <Path Width="14.625"
              Height="11.5"
              Data="F1 M 0,110L 47.6667,62L 102,117.333L 218.667,0L 266,48L 102,212.333L 0,110 Z "
              Fill="LimeGreen"
              Stretch="Uniform"
              UseLayoutRounding="False" />
    </Viewbox>

    <Style TargetType="Image">
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        <Setter Property="RenderOptions.CachingHint" Value="Cache" />
        <Setter Property="CacheMode">
            <Setter.Value>
                <BitmapCache />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  COMBO BOX STYLE STARTS BELOW  -->

    <!--  Control colors.  -->
    <Color x:Key="WindowColor">#FFE8EDF9</Color>
    <Color x:Key="ContentAreaColorLight">#FFC5CBF9</Color>
    <Color x:Key="ContentAreaColorDark">#FF7381F9</Color>

    <Color x:Key="DisabledControlLightColor">#FFE8EDF9</Color>
    <Color x:Key="DisabledControlDarkColor">#FFC5CBF9</Color>
    <Color x:Key="DisabledForegroundColor">#FF888888</Color>

    <Color x:Key="SelectedBackgroundColor">DimGray</Color>
    <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>

    <Color x:Key="ControlLightColor">#4C575757</Color>
    <Color x:Key="ControlMediumColor">Black</Color>
    <Color x:Key="ControlDarkColor">#FF211AA9</Color>

    <Color x:Key="ControlMouseOverColor">DarkBlue</Color>
    <Color x:Key="ControlPressedColor">#FF211AA9</Color>


    <Color x:Key="GlyphColor">#FF444444</Color>
    <Color x:Key="GlyphMouseOver">sc#1, 0.004391443, 0.002428215, 0.242281124</Color>

    <!--  Border colors  -->
    <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
    <Color x:Key="BorderMediumColor">#FF888888</Color>
    <Color x:Key="BorderDarkColor">#FF444444</Color>

    <Color x:Key="PressedBorderLightColor">#FF888888</Color>
    <Color x:Key="PressedBorderDarkColor">#FF444444</Color>

    <Color x:Key="DisabledBorderLightColor">#FFAAAAAA</Color>
    <Color x:Key="DisabledBorderDarkColor">#FF888888</Color>

