<Application x:Class="Saved_Game_Backup.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:savedGameBackup="clr-namespace:Saved_Game_Backup"
             StartupUri="MainWindow.xaml"
             d1p1:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins\DarkTheme.xaml" />
                <ResourceDictionary Source="Skins\MainStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelLocator xmlns:vm="clr-namespace:Saved_Game_Backup.ViewModel"
                                 x:Key="Locator"
                                 d:IsDataSource="True" />

            <!--  IMAGEBRUSHES GO HERE  -->
            <ImageBrush x:Key="MetroSmall" ImageSource="Assets\metroSmall.jpg" />
            <ImageBrush x:Key="Metro"
                        ImageSource="Assets\metro.jpg"
                        Stretch="Fill" />
            <ImageBrush x:Key="Rap"
                        ImageSource="Assets\rap.jpg"
                        Stretch="Fill" />

        </ResourceDictionary>
    </Application.Resources>
</Application>