<Window x:Class="Saved_Game_Backup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:savedGameBackup="clr-namespace:Saved_Game_Backup"
        xmlns:viewModel="clr-namespace:Saved_Game_Backup.ViewModel"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Save Game Backup Tool"
        Width="850"
        Height="700"
        DataContext="{Binding Path=Main,
                              Source={StaticResource Locator}}"
        Icon="Resources/SGBIcon.ico"
        Padding="3"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Window.Style>
        <Style BasedOn="{StaticResource FontStyle}" TargetType="Control" />

    </Window.Style>
    <Window.Resources>
        <savedGameBackup:BackupTypeToStringConverter x:Key="BackupConverter" />
        <savedGameBackup:StringToBackupTypeConverter x:Key="StringConverter" />

        <Style x:Key="ListBoxStyle" TargetType="ListBox">
            <!--  <Setter Property="Background" Value="{Binding Brushes[1]}" />  -->
            <Setter Property="Background" Value="#4C575757" />
            <Setter Property="Foreground" Value="{Binding Brushes[2]}" />
        </Style>

        <!--
            <LinearGradientBrush x:Key="ButtonBackgroundBrush">
            <GradientStop Color="#7F658989" Offset="0"/>
            <GradientStop Color="#7F747474" Offset="1"/>
            </LinearGradientBrush>
            
            
            <Style x:Key="ButtonStyle"  TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            </Style>
        -->
        <ImageBrush x:Key="Metro" ImageSource="Resources/metro.jpg" />
    </Window.Resources>
    <!--  <StackPanel Background="{Binding Brushes[0]}">  -->
    <StackPanel Background="{StaticResource Metro}">
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Theme">
                    <MenuItem Command="{Binding SetThemeLight}" Header="_Light" />
                    <MenuItem Command="{Binding SetThemeDark}" Header="_Dark" />
                </MenuItem>
                <MenuItem Command="{Binding Close}" Header="_Exit" />
            </MenuItem>
        </Menu>
        <StackPanel Margin="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock FontFamily="Segoe UI Semibold"
                       FontSize="14"
                       Text="Saved Game Backup Tool by Rob Cornell" />
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="430" />
                <RowDefinition Height="28*" />
                <RowDefinition Height="28*" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="70" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="510" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Row="1"
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding BackupTypes,
                                            Converter={StaticResource BackupConverter},
                                            Mode=TwoWay}"
                      SelectedItem="{Binding BackupType,
                                             Converter={StaticResource StringConverter},
                                             Mode=TwoWay}" />

            <!--  Removed Open Options Window Button  -->
            <!--
                <Button Grid.Row="1"
                Grid.Column="1"
                Height="60"
                HorizontalAlignment="Center"
                Command="{Binding OpenOptionsWindow}"
                Content="Backup Preferences" />
            -->

            <Button Grid.Row="1"
                    Grid.Column="3"
                    Height="60"
                    HorizontalAlignment="Center"
                    Command="{Binding StartBackup}"
                    Content="Backup My Saves!" />
            <StackPanel Grid.Row="2"
                        Grid.Column="3"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center"
                           FontSize="14"
                           Text="Autobackup Limit"
                           TextWrapping="Wrap" />

                <xctk:IntegerUpDown Width="40"
                                    Height="23"
                                    Margin="3"
                                    HorizontalAlignment="Right"
                                    Text="{Binding MaxBackups,
                                                   UpdateSourceTrigger=PropertyChanged,
                                                   Delay=100}" />
            </StackPanel>
            <StackPanel Grid.Row="3"
                        Grid.Column="3"
                        CanHorizontallyScroll="False">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="14"
                           Text="Games to Back Up" />
                <ListBox Height="430"
                         ItemsSource="{Binding GamesToBackup}"
                         SelectedItem="{Binding SelectedBackupGame}"
                         Style="{StaticResource ListBoxStyle}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding MoveToGamesList}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Command="{Binding Path=MoveToGamesList}"
                                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                  Header="Remove game" />
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>

                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type savedGameBackup:Game}">
                            <Border>
                                <StackPanel Margin="0,3,0,3">
                                    <Image Width="160"
                                           Height="180"
                                           Source="{Binding ThumbnailPath}" />
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding Name}" />
                                </StackPanel>
                            </Border>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel MaxWidth="{Binding ActualWidth,
                                                          RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                       FlowDirection="LeftToRight"
                                       Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </StackPanel>
            <StackPanel Grid.Row="3"
                        Grid.Column="2"
                        VerticalAlignment="Center">
                <Button Margin="3"
                        VerticalAlignment="Center"
                        Command="{Binding DetectGames}"
                        Content="Find Games" />
                <Button Margin="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding ResetList}"
                        Content="Reset Games" />
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="14"
                           Text="Games List" />
                <ListBox Width="200"
                         Height="400"
                         Margin="3"
                         ItemsSource="{Binding GamesList}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectedItem="{Binding SelectedGame}"
                         Style="{StaticResource ListBoxStyle}"
                         ToolTip="Double click a game to add it to the backup list.">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <command:EventToCommand Command="{Binding MoveToBackupList, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </StackPanel>
            <Button Grid.Row="7"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Command="{Binding OpenAddGameWindow}"
                    Content="Add Game to List" />
            <Border Grid.Row="7"
                    Grid.Column="3"
                    Margin="3"
                    HorizontalAlignment="Stretch"
                    Background="#CC00FF00"
                    CornerRadius="10"
                    Visibility="{Binding AutoBackupVisibility,
                                         UpdateSourceTrigger=PropertyChanged}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="20"
                           Text="Autobackup Enabled"
                           Visibility="{Binding AutoBackupVisibility,
                                                UpdateSourceTrigger=PropertyChanged}" />
            </Border>
            <StackPanel Grid.Row="8"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="Last Backup On:" />
                <TextBlock Margin="5,0,0,0"
                           VerticalAlignment="Bottom"
                           Text="Some Date" />
            </StackPanel>
        </Grid>

    </StackPanel>
</Window>
